<Window x:Class="TicketSwap.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketSwap.Wpf"
        mc:Ignorable="d"
        Title="LoginWindow" Height="250" Width="500">
    <StackPanel>
        <Label Content="Username" Margin="10 5" Padding="5" />
        <TextBox Margin="10 5" Padding="5" x:Name="textBox_userName" />
        <Label Content="Password" Margin="10 5" Padding="5" />
        <PasswordBox Margin="10 5" Padding="5" x:Name="passwordBox_password" />
        <Button Content="Login" Margin="10 5" Padding="5" Click="Login_Click" IsDefault="True" />
    </StackPanel>
</Window>
